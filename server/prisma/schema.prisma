generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  FirstName    String
  SecondName   String
  Email        String   @unique
  PhoneNumber  String   @unique
  Password     String

  @@map("users")
}

model Subscribe {
  id        Int    @id @default(autoincrement())
  Email     String @unique
  createdAt DateTime @default(now())
}


model Product {
  id    String @id @default(uuid())
  name  String
  price Float
  img   String
}

model Cart {
  id        String  @id @default(uuid())
  product   Product @relation(fields: [productId], references: [id])
  productId String
  quantity  Int

  @@map("Cart")
}
